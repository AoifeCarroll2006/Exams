random_fruits_2 = choice(fruits)#(ii)
random_fruits_3 = choice(fruits)#(ii)

print("Random Fruit 1:",random_fruits_1)#(i)
print("Random Fruit 2:",random_fruits_2)#(ii)
print("Random Fruit 3:",random_fruits_3)#(ii)

print("First fruit is", random_fruits_1)#(iii)

if random_fruits_1 == random_fruits_2:#(iv)
    print("First pair match")
    print("First pair are", random_fruits_1)#(v)
elif random_fruits_1 == random_fruits_3 or random_fruits_2 == random_fruits_3:#(vi)
    print("Matching pair")

for (choice) in range(0, 99):#(vii)
